<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= link_to "新しい順", sort_book_path("latest"), remote: true %> <%= " | " %> <%= link_to "評価の高い順", sort_book_path("high_evaluation"), remote: true %>
      <div  id = "books_index">
        <%= render 'index', books: @books%>
      </div>
    </div>
  </div>
</div>