<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <!--カテゴリーがあれば表示する-->
          <% if book.category.present? %>
            <%= link_to book.category, category_search_book_path(book.category) %>
          <% end %>
        </td>
        <td>
          <!--いいね機能-->
          <div id = "favorite_buttons_<%= book.id %>">
            <%= render "favorites/favorite", book: book %>
          </div>
        </td>
        <td>
          <p><%= book.book_comments.count %>コメント</p>
        </td>
        <td class="book-evaluation" data-score="<%= book.evaluation %>"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('.book-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>